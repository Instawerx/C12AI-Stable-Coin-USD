{
  "name": "c12usd-stablecoin",
  "version": "0.1.0",
  "description": "C12USD Stablecoin Pilot - Cross-chain stablecoin on BSC and Polygon with LayerZero",
  "main": "index.js",
  "scripts": {
    "dev": "hardhat node",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "test:db": "echo \"Database tests not yet implemented\"",
    "lint": "eslint . --ext .js,.ts",
    "typecheck": "tsc --noEmit",
    "deploy:bsc": "hardhat run scripts/deploy.js --network bsc",
    "deploy:polygon": "hardhat run scripts/deploy.js --network polygon",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "db:seed": "ts-node prisma/seed.ts",
    "test:watch": "hardhat test --watch",
    "gas-report": "REPORT_GAS=true hardhat test",
    "verify-setup": "node scripts/verify-setup.js",
    "deploy:production": "node scripts/deploy-production.js",
    "deploy:single": "node scripts/deploy-single-wallet.js",
    "setup:multisig": "node scripts/setup-multisig-roles.js",
    "verify:roles": "node scripts/verify-roles.js",
    "finalize:roles": "node scripts/finalize-role-transition.js",
    "setup:gcp": "bash deploy/gcp/scripts/setup.sh --project-id c12ai-dao --environment production",
    "setup:secrets": "bash deploy/gcp/scripts/setup-secrets.sh --project-id c12ai-dao --environment production",
    "build:docker": "docker build -t c12usd-backend .",
    "deploy:staging": "gcloud builds submit --config cloudbuild.yaml --substitutions=_ENVIRONMENT=staging",
    "deploy:prod": "gcloud builds submit --config cloudbuild.yaml --substitutions=_ENVIRONMENT=production",
    "seed:firestore": "node scripts/seed-firestore.js",
    "count:firestore": "node scripts/count-firestore-docs.js"
  },
  "keywords": [
    "stablecoin",
    "defi",
    "layerzero",
    "cross-chain",
    "bsc",
    "polygon"
  ],
  "author": "C12AI DAO",
  "license": "MIT",
  "packageManager": "pnpm@10.17.1",
  "devDependencies": {
    "@ethersproject/abi": "^5.8.0",
    "@ethersproject/providers": "^5.8.0",
    "@faker-js/faker": "^10.0.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.8",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "@typechain/ethers-v5": "^11.1.2",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "chai": "^6.0.1",
    "eslint": "^9.36.0",
    "ethereum-waffle": "^4.0.10",
    "firebase-admin": "^13.5.0",
    "hardhat": "^2.26.3",
    "hardhat-gas-reporter": "^2.3.0",
    "mocha": "^11.7.2",
    "prisma": "^6.16.2",
    "solidity-coverage": "^0.8.16",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@chainlink/contracts": "^1.4.0",
    "@layerzerolabs/lz-evm-protocol-v2": "^3.0.134",
    "@layerzerolabs/oapp-evm": "^0.3.2",
    "@layerzerolabs/oft-evm": "^3.2.1",
    "@openzeppelin/contracts": "^4.9.6",
    "@prisma/client": "^6.16.2",
    "@sentry/node": "^7.118.0",
    "@sentry/profiling-node": "^7.118.0",
    "@sentry/tracing": "^7.118.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "ethers": "^5.8.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "uuid": "^13.0.0",
    "winston": "^3.11.0"
  }
}
